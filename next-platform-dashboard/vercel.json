{
  "buildCommand": "pnpm build",
  "installCommand": "pnpm install",
  "framework": "nextjs",
  "functions": {
    "src/app/api/ai/website-designer/route.ts": {
      "maxDuration": 300
    },
    "src/app/api/ai/website-designer/stream/route.ts": {
      "maxDuration": 300
    },
    "src/app/api/ai/**/*.ts": {
      "maxDuration": 120
    }
  },
  "crons": [
    {
      "path": "/api/cron/domain-health",
      "schedule": "0 0 * * *"
    },
    {
      "path": "/api/social/publish",
      "schedule": "0 12 * * *"
    },
    {
      "path": "/api/social/sync",
      "schedule": "0 6 * * *"
    },
    {
      "path": "/api/cron/chat",
      "schedule": "0 2 * * *"
    }
  ]
}
