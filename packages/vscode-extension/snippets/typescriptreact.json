  "Dramac Settings Component": {
    "prefix": "dramac-settings",
    "body": [
      "import React from 'react';",
      "import { useModuleSettings, useModuleAuth } from '@dramac/sdk';",
      "import { z } from 'zod';",
      "",
      "const settingsSchema = z.object({",
      "  ${1:setting_key}: z.${2|string(),boolean(),number()|}${3:.default(${4:''})},",
      "});",
      "",
      "type SettingsType = z.infer<typeof settingsSchema>;",
      "",
      "export function Settings() {",
      "  const { hasPermission } = useModuleAuth();",
      "  const { settings, updateSettings, loading, saving } = useModuleSettings<SettingsType>({",
      "    schema: settingsSchema,",
      "  });",
      "",
      "  if (loading) {",
      "    return <div>Loading settings...</div>;",
      "  }",
      "",
      "  const handleSubmit = async (e: React.FormEvent<HTMLFormElement>) => {",
      "    e.preventDefault();",
      "    const formData = new FormData(e.currentTarget);",
      "    await updateSettings({",
      "      ${1}: formData.get('${1}') as string,",
      "    });",
      "  };",
      "",
      "  return (",
      "    <div className=\"p-6\">",
      "      <h1 className=\"text-2xl font-bold mb-6\">Settings</h1>",
      "",
      "      <form onSubmit={handleSubmit} className=\"space-y-4\">",
      "        <div>",
      "          <label className=\"block text-sm font-medium mb-1\">",
      "            ${5:Setting Label}",
      "          </label>",
      "          <input",
      "            type=\"text\"",
      "            name=\"${1}\"",
      "            defaultValue={settings?.${1} || ''}",
      "            className=\"w-full px-3 py-2 border rounded-md\"",
      "          />",
      "        </div>",
      "",
      "        <button",
      "          type=\"submit\"",
      "          disabled={saving}",
      "          className=\"px-4 py-2 bg-primary text-white rounded-md disabled:opacity-50\"",
      "        >",
      "          {saving ? 'Saving...' : 'Save Settings'}",
      "        </button>",
      "      </form>",
      "    </div>",
      "  );",
      "}",
      "",
      "export default Settings;",
      ""
    ],
    "description": "Create a Dramac module settings component"
  },
