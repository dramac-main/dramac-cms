  "Dramac Form Component": {
    "prefix": "dramac-form",
    "body": [
      "import React from 'react';",
      "import { useModuleForm } from '@dramac/sdk';",
      "import { z } from 'zod';",
      "",
      "const ${1:formSchema} = z.object({",
      "  ${2:field}: z.string().min(1, '${3:Field is required}'),",
      "});",
      "",
      "type FormValues = z.infer<typeof ${1}>;",
      "",
      "interface ${4:FormName}Props {",
      "  onSuccess?: () => void;",
      "  initialData?: Partial<FormValues>;",
      "}",
      "",
      "export function ${4}({ onSuccess, initialData }: ${4}Props) {",
      "  const { register, handleSubmit, errors, isSubmitting } = useModuleForm({",
      "    schema: ${1},",
      "    defaultValues: initialData,",
      "    onSubmit: async (values) => {",
      "      // Submit logic",
      "      onSuccess?.();",
      "    },",
      "  });",
      "",
      "  return (",
      "    <form onSubmit={handleSubmit} className=\"space-y-4\">",
      "      <div>",
      "        <label className=\"block text-sm font-medium mb-1\">${5:Label}</label>",
      "        <input",
      "          {...register('${2}')}",
      "          className=\"w-full px-3 py-2 border rounded-md\"",
      "        />",
      "        {errors.${2} && (",
      "          <p className=\"text-red-500 text-sm mt-1\">{errors.${2}.message}</p>",
      "        )}",
      "      </div>",
      "",
      "      <button",
      "        type=\"submit\"",
      "        disabled={isSubmitting}",
      "        className=\"px-4 py-2 bg-primary text-white rounded-md disabled:opacity-50\"",
      "      >",
      "        {isSubmitting ? 'Submitting...' : 'Submit'}",
      "      </button>",
      "    </form>",
      "  );",
      "}",
      ""
    ],
    "description": "Create a form component with validation"
  },
  "Dramac Modal Component": {
    "prefix": "dramac-modal",
