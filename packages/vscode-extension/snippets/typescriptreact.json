  "Dramac List Component": {
    "prefix": "dramac-list",
    "body": [
      "import React from 'react';",
      "import { usePaginatedData, useModuleAuth } from '@dramac/sdk';",
      "import { PermissionGuard } from '@dramac/sdk/auth';",
      "",
      "interface ${1:Item} {",
      "  id: string;",
      "  ${2:name}: string;",
      "  ${3:description}?: string;",
      "  created_at: string;",
      "}",
      "",
      "interface ${1}ListProps {",
      "  onSelect?: (item: ${1}) => void;",
      "  onEdit?: (item: ${1}) => void;",
      "  onDelete?: (item: ${1}) => void;",
      "}",
      "",
      "export function ${1}List({ onSelect, onEdit, onDelete }: ${1}ListProps) {",
      "  const { hasPermission } = useModuleAuth();",
      "  const { data, loading, error, page, totalPages, nextPage, prevPage } = usePaginatedData<${1}>({",
      "    table: '${4:items}',",
      "    pageSize: 10,",
      "  });",
      "",
      "  if (loading) {",
      "    return <div className=\"p-4\">Loading...</div>;",
      "  }",
      "",
      "  if (error) {",
      "    return <div className=\"p-4 text-red-500\">Error: {error.message}</div>;",
      "  }",
      "",
      "  return (",
      "    <div>",
      "      <ul className=\"divide-y\">",
      "        {data.map((item) => (",
      "          <li",
      "            key={item.id}",
      "            className=\"p-4 hover:bg-gray-50 cursor-pointer\"",
      "            onClick={() => onSelect?.(item)}",
      "          >",
      "            <div className=\"flex items-center justify-between\">",
      "              <div>",
      "                <h3 className=\"font-medium\">{item.${2}}</h3>",
      "                {item.${3} && (",
      "                  <p className=\"text-gray-500 text-sm\">{item.${3}}</p>",
      "                )}",
      "              </div>",
      "              <PermissionGuard permission=\"module.manage_${4}\">",
      "                <div className=\"flex gap-2\">",
      "                  <button",
      "                    onClick={(e) => { e.stopPropagation(); onEdit?.(item); }}",
      "                    className=\"text-blue-600 hover:text-blue-800\"",
      "                  >",
      "                    Edit",
      "                  </button>",
      "                  <button",
      "                    onClick={(e) => { e.stopPropagation(); onDelete?.(item); }}",
      "                    className=\"text-red-600 hover:text-red-800\"",
      "                  >",
      "                    Delete",
      "                  </button>",
      "                </div>",
      "              </PermissionGuard>",
      "            </div>",
      "          </li>",
      "        ))}",
      "      </ul>",
      "",
      "      {totalPages > 1 && (",
      "        <div className=\"flex items-center justify-between p-4 border-t\">",
      "          <button",
      "            onClick={prevPage}",
      "            disabled={page === 1}",
      "            className=\"px-3 py-1 border rounded disabled:opacity-50\"",
      "          >",
      "            Previous",
      "          </button>",
      "          <span className=\"text-sm text-gray-500\">",
      "            Page {page} of {totalPages}",
      "          </span>",
      "          <button",
      "            onClick={nextPage}",
      "            disabled={page === totalPages}",
      "            className=\"px-3 py-1 border rounded disabled:opacity-50\"",
      "          >",
      "            Next",
      "          </button>",
      "        </div>",
      "      )}",
      "    </div>",
      "  );",
      "}",
      ""
    ],
    "description": "Create a list component with pagination"
  },
