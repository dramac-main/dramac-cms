{
  "name": "@dramac/sdk",
  "version": "1.0.0",
  "description": "Official SDK for building Dramac modules",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./database": {
      "types": "./dist/database/index.d.ts",
      "import": "./dist/database/index.js"
    },
    "./ui": {
      "types": "./dist/ui/index.d.ts",
      "import": "./dist/ui/index.js"
    },
    "./ui/hooks": {
      "types": "./dist/ui/hooks.d.ts",
      "import": "./dist/ui/hooks.js"
    },
    "./auth": {
      "types": "./dist/auth/index.d.ts",
      "import": "./dist/auth/index.js"
    },
    "./testing": {
      "types": "./dist/testing/index.d.ts",
      "import": "./dist/testing/index.js"
    },
    "./cli": {
      "types": "./dist/cli/index.d.ts",
      "import": "./dist/cli/index.js"
    }
  },
  "bin": {
    "dramac": "./dist/cli/bin.js"
  },
  "files": [
    "dist",
    "templates"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "dramac",
    "modules",
    "sdk",
    "cms",
    "platform"
  ],
  "author": "Dramac <dev@dramac.io>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/dramac-main/dramac-sdk.git"
  },
  "homepage": "https://dramac.io/docs/sdk",
  "bugs": {
    "url": "https://github.com/dramac-main/dramac-sdk/issues"
  },
  "peerDependencies": {
    "@supabase/supabase-js": "^2.0.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "chokidar": "^3.5.3",
    "commander": "^11.1.0",
    "express": "^4.18.2",
    "inquirer": "^9.2.12",
    "open": "^11.0.0",
    "vite": "^5.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@supabase/supabase-js": "^2.39.0",
    "@testing-library/react": "^14.1.2",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.42",
    "@types/react-dom": "^18.2.17",
    "jsdom": "^23.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.2",
    "vitest": "^1.0.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
